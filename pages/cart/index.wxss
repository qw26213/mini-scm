page { box-sizing: border-box; height: 100%; background-color: #f5f5f5 }
checkbox .wx-checkbox-input { width: 36rpx; height: 36rpx; border-radius: 36rpx; border: 4rpx solid #c3a769; }
.orderItem { background-color: #fbfbfb; margin-bottom: 16rpx; background-color: #fff; padding: 20rpx 10rpx }
.goodImg { width: 220rpx; height: 200rpx; border-radius: 8rpx; border: 1rpx #eee solid; }
.goodMsg { width: 64%; height: 200rpx; margin-left: 20rpx; }
.goodTit { font-size: 28rpx; display: -webkit-box; overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp: 2; -webkit-box-orient: vertical; }
.skuName { color: #666; font-size: 24rpx; margin-top: 15rpx }
.goodPrice { font-size: 24rpx; color: #c3a769; margin-top: 15rpx }
.goodCount .tit { font-size: 26rpx; color: #333333; }
.numberCtrl .ctlbtn { color: #999; width: 50rpx; height: 40rpx; display: block; background-color: #f5f5f5; }
.numberCtrl .goodNum { width: 70rpx; height: 40rpx; text-align: center; font-size: 24rpx; color: #333; background-color: #f5f5f5; line-height: 40rpx; margin: 0 10rpx; font-weight: bold; }
.btn_bottom { height: 96rpx; position: fixed; bottom: 0; left: 0; width: 100%; box-sizing: border-box; background: #ffffff; }
.btnNum { font-size: 30rpx; color: #c3a769; font-weight: bold }
.btn_bottom view { font-size: 30rpx; }
.btn_common { background: #c3a769; height: 96rpx; color: #333; font-size: 34rpx; width: 240rpx; font-weight: bolder; border-radius: 0; color: #fff }
.content{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-right:10px;
  transition: all 0.4s;
  transform: translateX(80px);
  margin-left: -70px;
}
.del{
  background-color: #e4393c;
  width: 80px;
  height: 240rpx;
  font-size: 24rpx;
  color: #fff;
  transform: translateX(80px);
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.nodataDiv{padding-top: 260rpx;}

