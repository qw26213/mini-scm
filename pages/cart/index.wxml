<wxs module="filter" src="../../utils/numFr.wxs"></wxs>
<view class="p15 ub orderItem ub-ac" wx:for="{{ cart_list }}" wx:if="{{item.count}}" wx:key="unique">
    <checkbox value="cb" checked="{{ item.checked }}" color="#c3a769" data-index="{{index}}" bindtap="switchChecked" />
    <image class="goodImg udb" src="/images/pp1.png" lazy-load="true" mode="aspectFill"></image>
    <view class="ub ub-ver ub-pj goodMsg">
        <view>
            <view class="goodTit">{{item.productName}}</view>
            <view class="skuName">规格：{{ item.skuName }}</view>
            <view class="goodPrice">单价：{{filter.toFix(item.price) }}元</view>
        </view>
        <view class="ub ub-ac ub-pj goodCount">
            <view class="tit ub ub-ac">购买数量:</view>
            <view class="numberCtrl ub ub-ac">
                <image class="ctlbtn" src="/images/ion-del.png" data-index="{{index}}" data-arrow="left" bindtap="addNumber"></image>
                <view class="goodNum">{{item.count}}</view>
                <image class="ctlbtn" src="/images/ion-add.png" data-index="{{index}}" data-arrow="right" bindtap="addNumber"></image>
            </view>
        </view>
    </view>
</view>
<view class="btn_bottom ub ub-ac">
    <view class="ub-f1 plr15">金额：
        <text class="btnNum">{{ filter.toFix(amount) }}元</text>
    </view>
    <form bindsubmit="collectFormIds" report-submit="true">
        <button form-type="submit" class="btn_common ub-f1 ub ub-ac ub-pc" bindtap="toPay">结算</button>
    </form>
</view>