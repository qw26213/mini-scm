page{box-sizing:border-box;background-color:#f5f5f5}
.addressInfo{margin: 10rpx 0; font-size: 28rpx;background-color: #fff;padding:20rpx 30rpx 68rpx;position: relative;}
.arrow-right{position: absolute;top: 50%;right: 20rpx;margin-top: -12rpx}
.addressInfo .txt{font-size: 26rpx;color: #333; line-height: 44rpx}

.orderItem{background-color:#fbfbfb;margin-bottom: 16rpx;background-color:#fff;}
.goodImg{width:220rpx;height:200rpx;border-radius:8rpx;border:1rpx #eee solid;}
.goodMsg{width:64%;height:200rpx;margin-left:20rpx;}
.goodTit{font-size:28rpx;display:-webkit-box;overflow:hidden;text-overflow:ellipsis;-webkit-line-clamp:2;-webkit-box-orient:vertical;}
.skuName{color: #666;font-size: 24rpx;margin-top: 15rpx}
.goodPrice{font-size:24rpx;color:#c3a769;margin-top: 15rpx}
.goodCount .tit{font-size:26rpx;color:#333333;}
.numberCtrl .ctlbtn{color:#999;width:50rpx;height:40rpx;display:block;background-color:#f5f5f5;}
.goodNum{width:70rpx;height:40rpx;text-align:center;font-size:24rpx;color:#333;line-height:40rpx;margin:0 10rpx;font-weight:bold;}

.btn_bottom{height:96rpx;position:fixed;bottom:0;left:0;width:100%;box-sizing:border-box;background:#ffffff;}
.btnNum{font-size:30rpx;color:#c3a769;font-weight: bold}
.btn_bottom view{font-size:30rpx;}
.btn_common{background:#c3a769;height:96rpx;color:#333;font-size:34rpx;width:380rpx;font-weight:bolder;border-radius: 0;color: #fff}

.tips{font-size: 24rpx;color: #333;position: absolute;left: 0rpx;bottom: 20rpx;width: 100%;padding-left: 30rpx;}
.tips image{display: block;width: 28rpx;height: 28rpx;}